{
    "name": "RestPHP/RestPHP",
    "description": "The RestPHP Framework.",
    "keywords": ["framework", "RestPHP"],
    "license": "MIT",
    "require": {
        "php": "^7.1.3",
        "ext-ctype": "*",
        "ext-iconv": "*"
    },
    "require-dev": {        
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "VORM\\": "vendor/RestPHP/VORM/src/",
            "RestPHP\\": "vendor/RestPHP/Framework/src/",
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "Tests/"
        }
    }    
}
