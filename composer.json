{
    "name": "RestPHP/RestPHP",
    "description": "The RestPHP Framework.",
    "keywords": ["framework", "RestPHP"],
    "license": "MIT",
    "require": {
        "php": "^7.1.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "restphp/vorm": "dev-master",
        "restphp/framework": "dev-master"
    },
    "require-dev": {        
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "Tests/"
        }
    },    
    "repositories": [        
        {
            "type": "vcs",
            "url": "https://github.com/restphp/framework"
        },
        {
            "type": "vcs",
            "url": "https://github.com/restphp/vorm"
        }
    ]
}
